<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1280.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cashiepay.controller.SemesterController">

    <stylesheets>
        <URL value="@/cashiepay/style/semester.css" />
    </stylesheets>

    <children>
        <!-- HEADER -->
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1284.0" styleClass="header-bar">
            <children>
                <Label styleClass="SystemName" text="CASHIPAY MANAGEMENT SYSTEM" textFill="WHITE" />
            </children>
        </HBox>

        <!-- CARD -->
        <VBox layoutX="10.0" layoutY="70.0" prefHeight="660.0" prefWidth="1284.0" styleClass="semester-card">
            <children>

                <!-- TITLE -->
                <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="1274.0">
                    <children>
                        <Label text="Semester / School Year">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- TOP BAR: FILTER + ADD BUTTON -->
                <HBox alignment="CENTER_LEFT" prefHeight="85.0" prefWidth="1263.0" spacing="8.0">
                    <children>
                        <Label styleClass="showFilterText" text="Show">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <ComboBox fx:id="filterStatus" onAction="#filterStatusChanged" prefHeight="40.0" promptText="All" styleClass="filter-btn">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ComboBox>

                        <Button fx:id="newSemesterBtn" mnemonicParsing="false" onAction="#newSemesterBtnAction" prefHeight="40.0" styleClass="btn-primary" text="Add Semester" textFill="WHITE">
                            <graphic>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" translateX="-2.0">
                                    <image>
                                        <Image url="@../../icons/mdi--plus-circle%20(2).png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- TABLE -->
                <VBox prefHeight="536.0" prefWidth="1263.0">
                    <children>
                        <TableView fx:id="semesterTable" prefHeight="523.0" prefWidth="1242.0">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50" styleClass="center-column" text="ID" />
                                <TableColumn fx:id="colSemester" prefWidth="200" text="School Year" />
                                <TableColumn fx:id="colSchoolYear" prefWidth="200" text="Semester" />
                                <TableColumn fx:id="colCreatedAt" prefWidth="180" text="CREATED AT" />
                                <TableColumn fx:id="colUpdatedAt" prefWidth="180" text="UPDATED AT" />
                                <TableColumn fx:id="colStatus" prefWidth="160" styleClass="status-column" text="STATUS" />
                                <TableColumn fx:id="colAction" prefWidth="200" styleClass="center-column" text="ACTION" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
