<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="340.0" prefWidth="480.0" styleClass="modal-root"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cashiepay.DAO.AddNewAdminController">

    <stylesheets>
        <URL value="@/cashiepay/style/addnewparticular.css" />
    </stylesheets>

    <children>
        <VBox spacing="14" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <Label styleClass="modal-title" text="Add New Admin" />

            <VBox spacing="8">
                <VBox spacing="4">
                    <Label styleClass="field-label" text="Admin Name:" />
                    <TextField fx:id="adminNameField" promptText="e.g. Juan Dela Cruz" styleClass="input-field" />
                </VBox>

                <VBox spacing="4">
                    <Label styleClass="field-label" text="Email Address:" />
                    <TextField fx:id="emailField" promptText="e.g. admin@email.com" styleClass="input-field" />
                </VBox>

                <VBox spacing="4">
                    <Label styleClass="field-label" text="Username:" />
                    <TextField fx:id="usernameField" promptText="e.g. admin001" styleClass="input-field" />
                </VBox>

                <HBox spacing="10">
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Password:" />
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                    </VBox>
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Confirm:" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm" styleClass="input-field" />
                    </VBox>
                </HBox>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="cancelButton" styleClass="btn-secondary" text="Cancel" />
                <Button fx:id="saveButton" styleClass="btn-primary" text="Submit" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
