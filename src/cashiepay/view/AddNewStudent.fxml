<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane id="AnchorPane"
            prefHeight="260.0" prefWidth="480.0"
            styleClass="modal-root"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cashiepay.DAO.AddNewStudentController">

    <stylesheets>
        <URL value="@/cashiepay/style/addnewparticular.css"/>
    </stylesheets>

    <children>
        <VBox spacing="15"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <Label styleClass="modal-title" text="Add New Student"/>

            <VBox spacing="8">
                <VBox spacing="4">
                    <Label styleClass="field-label" text="Student ID:"/>
                    <TextField fx:id="studentIdField" promptText="e.g. 2023-0001" styleClass="input-field"/>
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="field-label" text="Last Name:"/>
                    <TextField fx:id="lastNameField" promptText="Last Name" styleClass="input-field"/>
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="field-label" text="First Name:"/>
                    <TextField fx:id="firstNameField" promptText="First Name" styleClass="input-field"/>
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="field-label" text="Middle Name:"/>
                    <TextField fx:id="middleNameField" promptText="Middle Name" styleClass="input-field"/>
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="field-label" text="Suffix:"/>
                    <ComboBox fx:id="suffixCombo"
                              promptText="Select suffix (optional)"
                              styleClass="input-field"/>
                </VBox>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="cancelButton" text="Cancel" styleClass="btn-secondary"/>
                <Button fx:id="saveButton"   text="Submit" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
