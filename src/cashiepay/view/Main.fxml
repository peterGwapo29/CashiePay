<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cashiepay.controller.MainController"
            prefWidth="1280" prefHeight="720">
    
    <stylesheets>
        <URL value="@/cashiepay/style/main.css" />
    </stylesheets>
    
    <children>
        <HBox prefWidth="1280" prefHeight="720">
            <!-- Sidebar container -->
            <VBox fx:id="sidebarContainer" prefWidth="220" />

            <!-- Main content container -->
            <AnchorPane fx:id="contentContainer" prefWidth="1060" />
        </HBox>
    </children>
</AnchorPane>
