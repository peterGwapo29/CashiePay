    <stylesheets>
        <URL value="@/cashiepay/style/collection.css" />
    </stylesheets>
    
    <children>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1284.0" styleClass="header-bar">
         <children>
            <Label styleClass="SystemName" text="CASHIEPAY MANAGEMENT SYSTEM" textFill="WHITE" />
         </children>
      </HBox>
      <VBox layoutX="10.0" layoutY="70.0" prefHeight="660.0" prefWidth="1261.0" styleClass="transaction-card">
         <children>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="1274.0">
               <children>
                  <HBox prefHeight="61.0" prefWidth="620.0">
                     <children>
                        <Label text="Transaction">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="61.0" prefWidth="663.0" spacing="8.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Button fx:id="btnImport" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #177334;" styleClass="btn" text="Import" textFill="WHITE">
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" translateX="-2.0">
                                 <image>
                                    <Image url="@../../icons/uil--import.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="btnExport" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: white;" styleClass="btn" text="Export">
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" translateX="-2.0">
                                 <image>
                                    <Image url="@../../icons/uil--export%20(1).png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="1284.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="61.0" prefWidth="642.0" spacing="8.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label text="Show">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="filterShow" onAction="#tableShowAction" prefHeight="40.0" prefWidth="80.0" promptText="10" style="-fx-background-color: white;" styleClass="filter-btn">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ComboBox>
                        <ComboBox fx:id="filterStatus" prefHeight="40.0" promptText="All" style="-fx-background-color: white;" styleClass="filter-btn">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ComboBox>
                        <Button fx:id="btnAddNew" mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: #4d6bff;" styleClass="btn" text="Add Transaction" textFill="WHITE">

                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" translateX="-2.0">
                                 <image>
                                    <Image url="@../../icons/mdi--plus-circle%20(2).png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="61.0" prefWidth="641.0" spacing="8.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#ClearSearchBar" prefHeight="40.0" styleClass="icon-btn">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../icons/tdesign--user-clear.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <TextField fx:id="txtSearchStudent" prefHeight="40.0" prefWidth="288.0" promptText="Search by Student ID" styleClass="btn">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <ComboBox fx:id="filterSMS" prefHeight="40.0" prefWidth="140.0" promptText="All" style="-fx-background-color: white;" styleClass="filter-btn">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ComboBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <VBox prefHeight="430.0" prefWidth="1263.0">
               <children>
                  <TableView id="removeScroll" fx:id="tableView" prefHeight="430.0">
                    <columns>
                      <TableColumn fx:id="id" prefWidth="55.999998450279236" text="ID" />
                      <TableColumn fx:id="colStudentId" prefWidth="100.00000762939453" text="Student ID" />
                        <TableColumn fx:id="colFirstName" prefWidth="106.39996337890625" text="First Name" />
                        <TableColumn fx:id="colLastName" prefWidth="118.4000244140625" text="Last Name" />
                        <TableColumn fx:id="colMiddleName" prefWidth="110.00003051757812" text="Middle Name" />
                        <TableColumn fx:id="colSuffix" prefWidth="58.600006103515625" text="Suffix" />
                        <TableColumn fx:id="colOrNumber" prefWidth="95.99993896484375" text="OR Number" />
                        <TableColumn fx:id="colParticular" prefWidth="100.0" text="Particular" />
                        <TableColumn fx:id="colMfoPap" prefWidth="84.79998779296875" text="Fund" />
                        <TableColumn fx:id="colAmount" prefWidth="75.39996337890625" text="Amount" />
                        <TableColumn fx:id="colDatePaid" prefWidth="147.79998779296875" text="Date Paid " />
                        <TableColumn fx:id="colSms" prefWidth="66.800048828125" text="SMS" />
                        <TableColumn fx:id="action" prefWidth="138.39995117187505" text="Action" />
                    </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="1284.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <!-- Single footer bar -->
                    <HBox alignment="CENTER_LEFT" prefWidth="1240.0" spacing="28.0" styleClass="footer-bar">
                        <children>

                            <!-- LEFT: totals -->
                            <HBox alignment="CENTER_LEFT" spacing="24.0">
                                <children>
                                    <VBox spacing="4.0">
                                        <children>
                                            <Label styleClass="summary-label" text="Total Transactions" />
                                            <Label fx:id="lblTotalTransactions" styleClass="summary-value" text="0" />
                                        </children>
                                    </VBox>

                                    <VBox spacing="4.0">
                                        <children>
                                            <Label styleClass="summary-label" text="Total Amount" />
                                            <Label fx:id="lblTotalCollected" styleClass="summary-value-accent" text="â‚±0.00" />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <!-- flexible space -->
                            <Region HBox.hgrow="ALWAYS" />

                            <!-- CENTER: date range -->
                            <VBox spacing="6.0">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="6.0">
                                        <children>
                                            <Label styleClass="summary-label" text="Date range" />
                                            <Label fx:id="displayDate" styleClass="date-range-text" text="All Dates" />
                                        </children>
                                    </HBox>

                                    <HBox alignment="CENTER_LEFT" spacing="12.0">
                                        <children>
                                            <HBox alignment="CENTER_LEFT" spacing="4.0">
                                                <children>
                                                    <Label styleClass="date-label" text="From" />
                                                    <DatePicker fx:id="filterStartDate" prefWidth="140.0" />
                                                    <Button fx:id="btnClearStart" styleClass="link-button" text="Clear" />
                                                </children>
                                            </HBox>

                                            <HBox alignment="CENTER_LEFT" spacing="4.0">
                                                <children>
                                                    <Label styleClass="date-label" text="To" />
                                                    <DatePicker fx:id="filterEndDate" prefWidth="140.0" />
                                                    <Button fx:id="btnClearEnd" styleClass="link-button" text="Clear" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>

                            <!-- small spacer between date + pagination -->
                            <Region prefWidth="16.0" />

                            <!-- RIGHT: pagination -->
                            <Pagination fx:id="pagination" maxWidth="260.0" prefHeight="40.0" prefWidth="260.0" style="-fx-page-information-visible: false;" />
                        </children>
                    </HBox>
                </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
